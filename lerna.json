{
    "version": "0.1.4",
    "npmClient": "npm",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "ignoreChanges": [
                "ignored-file",
                "*.md"
            ],
            "message": "[Chore] (Release): Publish",
            "registry": "https://npm.pkg.github.com"
        },
        "bootstrap": {
            "ignore": "",
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    },
    "packages": [
        "packages/*"
    ]
}
